{
  "editor.renderWhitespace": "none", // removes whitespace chars
  "editor.guides.indentation": true, // removes indent guides
  "editor.renderLineHighlight": "none", // removes line highlight
  "editor.occurrencesHighlight": false, // removes highlights occurrences (still works when you select a word)
  "editor.matchBrackets": "always", // the highlight of matching brackets
  "workbench.editor.showIcons": false, // removes icon from opened files in tabs
  "workbench.editor.tabCloseButton": "right", // removes cross icon from tabs
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.fontFamily": "'JetBrains Mono', 'Roboto Mono', 'DM Mono', monospace",
  "editor.fontSize": 12,
  "editor.lineHeight": 1.75,
  // "editor.fontFamily": "'Roboto Mono', 'DM Mono', monospace",
  // "editor.fontSize": 12,
  // "editor.lineHeight": 1.75,
  "editor.folding": true,
  "editor.glyphMargin": false,
  "workbench.activityBar.visible": false,

  "explorer.openEditors.visible": 0, // removes the open editors section at the top of the sidebar, you can see the opened files with ⌘ + ⌥ + Tab

  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.wrapTabs": true,
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": false,
  "workbench.editor.enablePreview": false,

  "terminal.integrated.fontFamily": "'Roboto Mono', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.3,

  "breadcrumbs.enabled": false,

  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  "[python]": {
    "editor.defaultFormatter": null,
    "editor.tabSize": 4
  },

  "[go]": {
    "editor.defaultFormatter": null
  },

  "[svelte]": {
    // "editor.defaultFormatter": "svelte.svelte-vscode"
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },

  "[blade]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "php.validate.executablePath": "/opt/lampp/bin/php",

  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "editor.insertSpaces": true,
  "go.toolsManagement.autoUpdate": true,
  "workbench.startupEditor": "none",
  "prettier.requireConfig": true,
  "svelte.enable-ts-plugin": true,
  "window.titleBarStyle": "custom",
  "window.title": "${rootName}",
  "workbench.editorAssociations": {
    "*.db": "sqlite-viewer.option"
  },
  "editor.cursorSmoothCaretAnimation": true,
  "files.associations": {
    "*.tmpl": "html"
  },
  "workbench.colorTheme": "Min Dark",
  "workbench.iconTheme": "vs-minimal",
  "terminal.integrated.enableMultiLinePasteWarning": false
}
