{
  // removes whitespace chars
  "editor.renderWhitespace": "none", 

  // removes indent guides
  "editor.guides.indentation": true, 

  // removes line highlight
  "editor.renderLineHighlight": "none", 

  // removes highlights occurrences (still works when you select a word)
  "editor.occurrencesHighlight": false, 

   // the highlight of matching brackets
  "editor.matchBrackets": "always",

  // removes icon from opened files in tabs
  "workbench.editor.showIcons": false, 

   // removes cross icon from tabs
  "workbench.editor.tabCloseButton": "right",

  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.fontFamily": "'JetBrains Mono', monospace",
  "editor.fontSize": 12,
  "editor.lineHeight": 1.6,
  "editor.folding": true,
  "editor.glyphMargin": false,
  "workbench.activityBar.visible": false,

  // removes the open editors section at the top of the sidebar, you can see the opened files with ⌘ + ⌥ + Tab
  "explorer.openEditors.visible": 0, 
  
  "explorer.compactFolders": false,

  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.wrapTabs": true,
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": false,
  "workbench.editor.enablePreview": false,

  "terminal.integrated.fontFamily": "'Roboto Mono', monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.3,

  "breadcrumbs.enabled": false,

  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  "[python]": {
    "editor.defaultFormatter": null,
    "editor.tabSize": 4
  },

  "[go]": {
    "editor.defaultFormatter": null
  },

  "[blade]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "php.validate.executablePath": "/opt/lampp/bin/php",

  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "editor.insertSpaces": true,
  "go.toolsManagement.autoUpdate": true,
  "workbench.startupEditor": "none",
  "prettier.requireConfig": true,
  "svelte.enable-ts-plugin": true,
  "window.titleBarStyle": "custom",
  "window.title": "${rootName}",
  "workbench.editorAssociations": {
    "*.db": "sqlite-viewer.option"
  },
